<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".categoy">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="45dp"
        app:srcCompat="@drawable/bg2_mainactiv" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="55dp"
        android:text="CHOOSE THE "
        android:textAlignment="center"
        android:textColor="@color/second_color"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp"
        android:text="CATEGORY "
        android:textAlignment="center"
        android:textColor="@color/maincolor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btndesign"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btntopleft"
        android:text="DESIGN"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btncyber"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:textColor="@color/white"
        android:background="@drawable/button_mainactivity"
        android:text="cyb sec"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnmobdev"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btnbottomleft"
        android:text="mob dev"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnwebdev"
        android:layout_width="125dp"
        android:layout_height="121dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btnbottomright"
        android:text="web dev"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>